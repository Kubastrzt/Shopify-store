<!doctype html>
<head>
  <title>{{ page_title }}</title>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="description" content="{{ page_description | escape }}">
  <link rel="canonical" href="{{ canonical_url }}">
  <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
  {{ content_for_header }} <!-- Header hook for plugins -->
  {{ 'application.scss.css' | asset_url | stylesheet_tag }}
  {{ 'application.js' | asset_url | script_tag }}
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Dongle&family=Ubuntu:wght@400;700&display=swap" rel="stylesheet">
</head>
<style>
  .menu{
    padding: 24px 0;
    margin: 0 24px;
  }
  .menu-inner-wrapper{
    align-items: center;
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
  }
  .hamburger{
    height: 24px;
    width: 24px;
  }
  .menu-links{
    height: 100vh;
    width: 310px;
    background-color: #fff;
    transform: translateX(-108%);
    transition-duration: 0.3s;
    position: fixed;
    top: 0;
    z-index: 1;
    padding: 46px 24px;
  }
  .menu-links a{
    text-decoration: none;
    color: #3D4D4C;
  }
  .divider{
    height: 1px;
    width: 262px;
    margin: 17px 0 17px 0;
    background-color: #3D4D4C;
  }
  .logo img{
    width: 100px;
  }
</style>
<body>
  <header>
    {% section 'header' %}
  </header>

  {% if shop.customer_accounts_enabled %}
    {% if customer %}
      <a href="/account">account</a>
      {{ 'log out'  | customer_logout_link }}
    {% else %}
      {{ 'log in ' | customer_login_link }}
      {{ 'register' | customer_register_link }}
    {% endif %}
  {% endif %}

  <main role="main">
    {{ content_for_layout }}
  </main>
</body>
<script>
  const hamburgerButtonOpen=document.querySelector('.hamburger')
  const menuMobile=document.querySelector('.menu-links')
  const hamburgerButtonClose=document.querySelector('.close-menu')

  hamburgerButtonOpen.addEventListener('click', ()=>{
    menuMobile.style.transform='translateX(-8%)'
    menuMobile.style.boxShadow='70px 0px 0px 0px rgba(61, 77, 76, 0.75)'
  })
  hamburgerButtonClose.addEventListener('click', ()=>{
    menuMobile.style.transform='translateX(-108%)'
    menuMobile.style.boxShadow='none'
  })
</script>
</html>
