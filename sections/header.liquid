          </div>
          {% for link in linklists.main-menu.links %}
            <div class="divider"></div>
            <a href="{{ link.url }}">{{ link.title }}</a>
          {% endfor %}
    </div>          
    <div class="logo">
        {% if section.settings.logoheader %}
            <img src="{{section.settings.logoheader | img_url: 'medium'}}">
        {% endif %}
    </div>
  </nav>

  {% schema %}
    {
        "name":"Nagłówek logo",
            "settings":[{
                "type": "image_picker",
                "label": "Logo",
                "id":"logoheader"
             }]
    }
  {% endschema %}
