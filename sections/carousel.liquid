<div class="carousel-container" id="carousel-container">
    <div class="carousel snap-carousel">
        {% for block in section.blocks %}
        <div class="slide">
            <img src="{{ block.settings.carousel-img | image_url: width: 375, height: 520}}">
            <div class="content-img">
                <label>{{ block.settings.img-content }}</label>
                <a href="#">ZOBACZ WIĘCEJ</a>
            </div>
        </div>
        {% endfor %}
    </div>
    <div class="dots-wrapper">
        {% for block in section.blocks %}
            <div class="slide-dots"></div>
        {% endfor %}
    </div>
</div>
{% schema %}
{
    "name":"Zdjęcia do slidera",
    "blocks":[{
        "name":"Nowe zdjęcie",
        "type":"image",
        "settings":[{
            "type":"image_picker",
            "label":"Wybierz zdjęcie",
            "id":"carousel-img"
        },
        {
            "type":"text",
            "label":"Opis na zdjęcie",
            "id":"img-content"
        }
        ]
    }],
    "presets":[
    {
        "name":"Slider",
        "category":"text"
    }]
}
{% endschema %}