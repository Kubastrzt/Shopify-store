<div class="landing-news">
    <h2>NOWOŚCI</h2>
    <div class="products-outer-wrapper snap-product">
    {% for product in section.settings.new-collection.products %}
        <div class="products-inner-wrapper">
            <div class="products">
                <div class="product-img"><img src="{{ product.featured_image.src | image_url: width:300, crop:'center' }}"></div>
                    <div class="product-collection-title">{{ section.settings.new-collection.title }}</div>
                    <div class="product-title">{{ product.title }}</div>
                    <div class="product-price">{{ product.price | money }}</div>
                
            </div>
        </div>  
    {% endfor %}
    </div>
</div>


{% schema %}
{
"name":"Nowości- kolekcja",
"settings":[{
    "type":"collection",
    "id":"new-collection",
    "label":"Wybierz kolekcje"
}],
"presets":[{
    "name":"Nowości- kolekcja",
    "category":"text"
}]
}
{% endschema %}