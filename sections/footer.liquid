{{ 'footer.scss ' | asset_url | stylesheet_tag }}
<div class="footer">
    <img src="{{ 'footer-logo.png' | asset_url }}">
    <div class="addres-wrapper">
        <h3>SKLEP STACJONARNY</h3>
        <label>ul. Dyrekcyjna 3, Wrocław<br>
            (Centrum Handlowe Wroclavia)</label>
        <label>Poniedziałek - Piątek 10:00 - 18:00<br>
            Sobota 10:00 - 14:00</label>
    </div>
    <div class="info-links">
        <h2>INFORMACJE</h2>
        {% for block in section.blocks %}
            <a href="{{ block.settings.infoLink }}">{{ block.settings.infoLabel }}</a>
        {% endfor %}
    </div>
    <div class="short-info">
        <h2>KOKOSEK</h2>
        {% for block in section.blocks %}
            <a href="{{ block.settings.kokosekLink }}">{{ block.settings.kokosekLabel }}</a>
        {% endfor %}
    </div>
    <div class="contact">
        <h2>KONTAKT</h2>
        {% for block in section.blocks %}
            <h4>{{ block.settings.additionalContact }}</h4>
        {% endfor %}
    </div>
    <div class="social">
        <h2>OBSERWUJ NAS</h2>
        {% for block in section.blocks %}
            <a href="{{ block.settings.socialLogo.url }}">{{ block.settings.socialLogo | img_url: 'medium' }}</a>
        {% endfor %}
    </div>
    <div class="pay-methods">
        <h2>PŁATNOŚCI</h2>
        {% for block in section.blocks %}
            <img src="{{ block.settings.paymentLogo }}">
        {% endfor %}
    </div>
    <div class="copyrights">
        <h3>COPYRIGHT &copy; 2022, KOKOSEK</h3> 
    </div>
</div>
{% schema %}
{
    "name":"footer",
    "blocks":[{
        "name":"Informacje",
        "type":"link_list",
        "settings":[{
            "label":"Dodaj link",
            "id":"infoLink",
            "type":"url"
        },
        {   
            "label":"Dodaj etykiete do linku",
            "id":"linkLabel",
            "type":"text"
        }
        ]
    },
    {
        "name":"KOKOSEK",
        "type":"text",
        "settings":[{
            "label":"Dodaj link",
            "id":"kokosekLink",
            "type":"url"
        },
        {
            "label":"Dodaj etykiete do linku",
            "id":"kokosekLabel",
            "type":"text"
        }
        ]
    },
    {
        "name":"KONTAKT",
        "type":"contact",
        "settings":[{
            "label":"Dodaj informacje kontaktową",
            "id":"additionalContact",
            "type":"text"
        }]
    },
    {
        "name":"OBSERWUJ NAS",
        "type":"social",
        "settings":[{
            "label":"Dodaj logo social media",
            "id":"socialLogo",
            "type":"image_picker"
        },
        {
            "label":"Dodaj link do social media",
            "id":"socialLink",
            "type":"url"
        }
        ]
    },
    {
        "name":"PŁATNOŚCI",
        "type":"payments",
        "settings":[{
            "label":"Dodaj logo metody płatności",
            "id":"paymentLogo",
            "type":"image_picker"
        }]
    }
    ],
    "presets":[{
        "name":"Stopka",
        "category":"footer"
    }]
}
{% endschema %}